<Window x:Class="Makeup_Store_Progra_3__D_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Makeup_Store_Progra_3__D_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Nombre del producto:" Margin="20 20 20 0" Width="200"/>
            <TextBox x:Name="txtNombre" Margin="20 0 20 20" Width="200"/>

            <Label Content="Cantidad"  Margin="20 20 20 0" Width="200"/>
            <TextBox x:Name="txtCantidad" Margin="20 0 20 20" Width="200"/>

            <Label Content="Fecha de caducidad: "  Margin="20 20 20 0" Width="200"/>
            <DatePicker x:Name="dpFechaCaducidad" Margin="20 0 20 20" Width="200"/>
            
            <Button Content="Agregar producto" Click="AgregarProducto_Click"  Margin="20" Width="200"/>
            <ListBox x:Name="lstProductos" DisplayMemberPath="Nombre"  Margin="20" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
